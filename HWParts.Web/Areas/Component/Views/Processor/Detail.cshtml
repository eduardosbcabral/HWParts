@model HWParts.Core.Application.ViewModels.Processor.ProcessorViewModel

@{
    ViewData["Title"] = Model.FullName;
}

<div id="carouselComponentImages" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @foreach (var item in Model.ImagesUrls.Select((value, i) => (value, i)))
        {
            <li data-target="#carouselComponentImages" data-slide-to="@item.i" class="@(item.i==0?"active":"")"></li>
        }
    </ol>
    <div class="carousel-inner" style="background-color: grey">
        @foreach (var item in Model.ImagesUrls.Select((value, i) => (value, i)))
        {
            <div class="carousel-item @(item.i==0?"active":"")">
                <img src="@item.value" class="d-block" style="width: 50%; margin-left: auto; margin-right: auto;">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselComponentImages" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselComponentImages" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<ul class="list-group" style="margin-top: 15px;">
    <li class="list-group-item">@Model.FullName</li>
    <li class="list-group-item">
        <a href="@Model.Url">Ir para a página do produto</a>
    </li>
</ul>