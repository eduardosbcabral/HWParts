@model HWParts.Core.Application.ViewModels.ComponentPrice.ComponentPriceViewModel;

@{
    ViewData["Title"] = "Remover Preço";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Delete">
    <vc:summary />

    <h3>Tem certeza de que deseja remover o preço?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Url)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Url)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Platform)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Platform)
            </dd>
        </dl>


        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" />
            <a asp-action="Index" id="back-button" class="btn btn-info">Voltar para a lista</a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        let currentUrl = window.location.href;
        let previousUrl = currentUrl.replace(new RegExp(/\/remove\/.*/g), '/list');

        $('#back-button').attr('href', previousUrl);
    </script>
}