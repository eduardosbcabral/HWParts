@model HWParts.Core.Application.ViewModels.Base.ComponentBaseViewModel

<div>
    <div class="form-group">
        <div class="input-group col-md-12 hw-btn-group">
            <label asp-for="ImagesUrls" class="col-md-12 control-label hw-control-label" style="padding-left: 0 !important;"></label>

            <div class="input-group-prepend">
                <button class="btn btn-outline-primary" id="add-image-url" type="button">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <input type="text" id="input-image-url" class="form-control hw-control-input" />
            <div class="col-md-12" style="padding-left: 0">
                <span asp-validation-for="ImagesUrls" id="image-urls-validation" class="text-danger hw-text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-md-12 mb-3">
        <span id="quantidade-imagens" class="badge badge-info"></span>
        <div id="carouselImagensUrls" class="carousel slide carousel-images-urls" data-ride="carousel">
            <div class="carousel-inner" id="images-urls" style="background-color: grey">
                @for (var i = 0; i < Model.ImagesUrls.Count; i++)
                {
                    <div class="carousel-item @(i==0?"active":"")" data-interval="2000" id="carousel-item-@i">
                        <input type="hidden" name="ImagesUrls[@i]" id="image-url-input-@i" value="@Model.ImagesUrls[i]" />
                        <img src="@Model.ImagesUrls[i]" id="image-url-img-@i" class="d-block" style="width: 50%; margin-left: auto; margin-right: auto;" />
                        <div class="carousel-caption">
                            <button type="button" title="Remover imagem" style="border-radius:50%; font-size: 2rem; z-index: 500; width: 70px; height: 70px" class="btn btn-danger btn-sm" id="remove-image-url-@i">
                                <i class="fas fa-trash" style="pointer-events: none"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselImagensUrls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselImagensUrls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <script>

        document.addEventListener('DOMContentLoaded', () => {
            let urlsCount = $('#images-urls input').length;
            if (urlsCount === 0) {
                $('#carouselImagensUrls').css('display', 'none');
            }
            updateUrlQuantityText(urlsCount);

            $(document).on('click', '#add-image-url', () => {
                const input = $('#input-image-url');
                const url = input.val().trim();

                if (url !== '') {

                    testImage(url, function (url, status) {
                        if (status === 'error') {
                            $('#image-urls-validation').text('Insira uma URL válida.');
                            return;
                        }

                        $('.carousel-item').removeClass('active');

                        $(`
                            <div class="carousel-item active" data-interval="2000">
                                <input type='hidden' id="image-url-input-${urlsCount + 1}" name='ImagesUrls[${urlsCount}]' value='${url}' />
                                <img src='${url}' id="image-url-img-${urlsCount + 1}" class="d-block" style="width: 50%; margin-left: auto; margin-right: auto;" />
                                <div class="carousel-caption">
                                    <button type="button" title="Remover imagem" style="border-radius:50%; font-size: 2rem; z-index: 500; width: 70px; height: 70px" class="btn btn-danger btn-sm" id="remove-image-url-${urlsCount + 1}">
                                        <i class="fas fa-trash" style="pointer-events: none"></i>
                                    </button>
                                </div>
                            </div>
                        `).appendTo('.carousel-inner');

                        input.val('');
                        $('#image-urls-validation').text('');


                        urlsCount++;

                        updateUrlQuantityText(urlsCount);
                        $('#carouselImagensUrls').css('display', 'block');
                        $('#carouselImagensUrls').carousel();
                    });
                }
                else {
                    $('#image-urls-validation').text('Digite uma URL.');
                }
            });

            $(document).on('click', '#images-urls button', (event) => {
                const splittedId = event.target.id.split("-");
                const index = splittedId[splittedId.length - 1];

                $(`#image-url-img-${index}`).remove();
                $(`#image-url-input-${index}`).remove();
                $(`#remove-image-url-${index}`).remove();
                $(`#carousel-item-${index}`).remove();

                $('#images-urls input').each(function (indexInput) {
                    $(this).attr({
                        'id': 'image-url-input-' + indexInput,
                        'name': `ImagesUrls[${indexInput}]`
                    });
                });

                $('.carousel-item').first().addClass('active');

                urlsCount--;
                updateUrlQuantityText(urlsCount);

                if (urlsCount === 0) {
                    $('#carouselImagensUrls').css('display', 'none');
                }

            });


            if ($('#image-urls-validation').text().trim().length) {
                $('#input-image-url').addClass('input-validation-error');
            }
        });

        function updateUrlQuantityText(urlsCount) {
            $('#quantidade-imagens').text(`(${urlsCount}) URL's`);
        }

        function testImage(url, callback, timeout) {
            timeout = timeout || 5000;
            var timedOut = false, timer;
            var img = new Image();
            img.onerror = img.onabort = function () {
                if (!timedOut) {
                    clearTimeout(timer);
                    callback(url, "error");
                }
            };
            img.onload = function () {
                if (!timedOut) {
                    clearTimeout(timer);
                    callback(url, "success");
                }
            };
            img.src = url;
            timer = setTimeout(function () {
                timedOut = true;
                // reset .src to invalid URL so it stops previous
                // loading, but doesn't trigger new load
                img.src = "//!!!!/test.jpg";
                callback(url, "timeout");
            }, timeout);
        }
    </script>
    <style>
        .carousel-images-urls {
            width: 700px !important;
        }
    </style>
</div>
