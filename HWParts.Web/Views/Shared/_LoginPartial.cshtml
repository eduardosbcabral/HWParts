@using Microsoft.AspNetCore.Identity
@using HWParts.Core.Domain.Entities
@using HWParts.Core.Infrastructure.Identity.Models;
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if(User.IsInRole(ApplicationRoles.Super) ||
           User.IsInRole(ApplicationRoles.Admin))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Manage" title="Manage">@User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Sair</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Cadastrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Entrar</a>
        </li>
    }
</ul>