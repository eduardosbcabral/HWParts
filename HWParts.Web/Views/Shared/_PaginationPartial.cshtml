

@model HWParts.Core.Infrastructure.Common.Pagination.BasePaginationObject

    <ul class="hw-pagination">
        @if (Model.TotalPages == 0)
        {
            <li class="hw-page-item">
                <div class="hw-page-link">
                    <a class="btn-nav-pagination btn-pagination-disabled" href="?page=@Model.PreviousPage">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
            </li>
            <li class="hw-page-item">
                <div class="hw-page-link">
                    <a class="btn-pagination btn-pagination-last" href="?page=@Model.CurrentPage">@Model.CurrentPage</a>
                </div>
            </li>
            <li class="hw-page-item">
                <div class="hw-page-link">
                    <a class="btn-nav-pagination" href="?page=@Model.NextPage">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </li>
        }
        else
        {
            if (Model.CurrentPage == 1)
            {
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-nav-pagination btn-pagination-disabled" href="?page=@Model.PreviousPage">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </li>
                <li class="hw-page-item current-item">
                    <div class="hw-page-link">
                        <a class="btn-pagination btn-pagination-first btn-current" href="?page=@Model.CurrentPage">@Model.CurrentPage</a>
                    </div>
                </li>

                if (Model.TotalPages > 1)
                {
                    <li class="hw-page-item">
                        <div class="hw-page-link">
                            <a class="btn-pagination" href="?page=@Model.NextPage">
                                @Model.NextPage
                            </a>
                        </div>
                    </li>

                    if (Model.TotalPages > 3)
                    {
                        <li class="hw-page-item">
                            <div class="hw-page-link">
                                <a class="btn-pagination" href="?page=3">
                                    3
                                </a>
                            </div>
                        </li>
                    }
                }
            }
            else if (Model.CurrentPage != Model.TotalPages)
            {
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-nav-pagination" href="?page=@Model.PreviousPage">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </li>

                if ((Model.CurrentPage - 1) > 1)
                {
                    <li class="hw-page-item">
                        <div class="hw-page-link">
                            <a class="btn-pagination btn-pagination-first" href="?page=1">
                                1
                            </a>
                        </div>
                    </li>
                    <li class="hw-page-item">
                        <div class="hw-page-link">
                            <a class="btn-pagination btn-pagination-no-click" href="">
                                &nbsp;&nbsp;&nbsp;...&nbsp;&nbsp;&nbsp;
                            </a>
                        </div>
                    </li>
                }

                <li class="hw-page-item">
                    <div class="hw-page-link">

                        @if (Model.CurrentPage > 2)
                        {
                            <a class="btn-pagination" href="?page=@Model.PreviousPage">
                                @Model.PreviousPage
                            </a>
                        }
                        else
                        {
                            <a class="btn-pagination btn-pagination-first" href="?page=@Model.PreviousPage">
                                @Model.PreviousPage
                            </a>
                        }

                    </div>
                </li>
                <li class="hw-page-item current-item">
                    <div class="hw-page-link">
                        <a class="btn-pagination btn-current" href="?page=@Model.CurrentPage">@Model.CurrentPage</a>
                    </div>
                </li>
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        @if(Model.NextPage == Model.TotalPages)
                        {
                            <a class="btn-pagination btn-pagination-last" href="?page=@Model.NextPage">
                                @Model.NextPage
                            </a>
                        }
                        else
                        {
                            <a class="btn-pagination" href="?page=@Model.NextPage">
                                @Model.NextPage
                            </a>
                        }
                    </div>
                </li>
            }
            else
            {
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-nav-pagination" href="?page=@Model.PreviousPage">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </li>

                if ((Model.CurrentPage - 1) > 1)
                {
                    <li class="hw-page-item">
                        <div class="hw-page-link">
                            <a class="btn-pagination btn-pagination-first" href="?page=1">1</a>
                        </div>
                    </li>
                    <li class="hw-page-item">
                        <div class="hw-page-link">
                            <a class="btn-pagination btn-pagination-no-click" href="">
                                &nbsp;&nbsp;&nbsp;...&nbsp;&nbsp;&nbsp;
                            </a>
                        </div>
                    </li>
                }

                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-pagination" href="?page=@Model.PreviousPage">@Model.PreviousPage</a>
                    </div>
                </li>
                <li class="hw-page-item current-item">
                    <div class="hw-page-link">
                        <a class="btn-pagination btn-pagination-last btn-current" href="?page=@Model.CurrentPage">@Model.CurrentPage</a>
                    </div>
                </li>
            }

            if (Model.CurrentPage != Model.TotalPages && (Model.CurrentPage + 1) != Model.TotalPages)
            {
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-pagination btn-pagination-no-click" href="">
                            &nbsp;&nbsp;&nbsp;...&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </li>
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-pagination btn-pagination-last" href="?page=@Model.TotalPages">@Model.TotalPages</a>
                    </div>
                </li>
            }

            if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-nav-pagination btn-pagination-disabled" href="?page=@Model.NextPage">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </li>
            }
            else
            {
                <li class="hw-page-item">
                    <div class="hw-page-link">
                        <a class="btn-nav-pagination" href="?page=@Model.NextPage">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </li>
            }
        }
    </ul>