@using HWParts.Core.Infrastructure.Identity.Models;

<ul class="hw-navbar-items-list flex">
    <li>
        <div class="hw-navbar-item mr-2">
            <div class="dropdown">
                <a class="hw-navbar-item-link dropdown-toggle" id="dropdownComponentButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Componentes
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownComponentButton">
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="Case" asp-action="Index">
                        <img src="~/assets/svg/case-outline.svg" />
                        Gabinetes
                    </a>
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="GraphicsCard" asp-action="Index">
                        <img src="~/assets/svg/graphic-card-outline.svg" />
                        Placas de Vídeo
                    </a>
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="Memory" asp-action="Index">
                        <img src="~/assets/svg/ram-memory-outline.svg" />
                        Memórias RAM
                    </a>
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="Motherboard" asp-action="Index">
                        <img src="~/assets/svg/motherboard-outline.svg" />
                        Placas-Mãe
                    </a>
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="PowerSupply" asp-action="Index">
                        <img src="~/assets/svg/power-supply-outline.svg" />
                        Fontes
                    </a>
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="Storage" asp-action="Index">
                        <img src="~/assets/svg/motherboard-outline.svg" />
                        Storage
                    </a>
                    <a class="dropdown-item hw-navbar-dropdown-item" asp-area="Component" asp-controller="Processor" asp-action="Index">
                        <img src="~/assets/svg/motherboard-outline.svg" />
                        Processadores
                    </a>
                </div>
            </div>
        </div>
    </li>
    @if (User.IsInRole(ApplicationRoles.Super) ||
            User.IsInRole(ApplicationRoles.Admin))
    {
        <li>
            <div class="hw-navbar-item">
                <a class="hw-navbar-item-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
            </div>
        </li>
    }
</ul>