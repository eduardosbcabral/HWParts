@model HWParts.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Oops! Ocorreu um erro!";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Oops! Ocorreu um erro.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}